{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Nestjs",
      "restart": true,
      // "preLaunchTask": "nestjs:debug",
      // "stopOnEntry": false,
      "protocol": "inspector"
    },
    {
      // Nodemon v2.0.2 has an issue that makes debugging crash after
      // watch-mode reboot, throwing "address already in use".
      // We use v2.0.1 instead. More info at:
      // https://github.com/remy/nodemon/issues/1476#issuecomment-573592914
      "type": "node",
      "request": "launch",
      "name": "Launch Nestjs",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
      "runtimeArgs": [ "--config", "nodemon-debug.json" ],
      // We do not use program since vscode requires outFiles and
      // and a preLaunchTask (tsc build) for TS files.
      "args": ["${workspaceRoot}/src/main.ts"],
      "protocol": "auto",
      "restart": true,
      "smartStep": true,
      "console": "integratedTerminal"
    }
  ]
}